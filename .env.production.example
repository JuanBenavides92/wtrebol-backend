# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB - VPS Database
MONGODB_URI=mongodb://USER:PASSWORD@IP:PORT/DATABASE?authSource=DATABASE
DB_NAME=wtrebol
COLLECTION_PREFIX=wtrebol

# Frontend URL - PRODUCTION
FRONTEND_URL=https://wtrebol.com

# JWT Configuration - GENERATE NEW STRONG SECRETS
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=24h

# Session Configuration - GENERATE NEW STRONG SECRET
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-2

# Email Configuration - REQUIRED FOR APPOINTMENTS
# Setup Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASS=YOUR_GMAIL_APP_PASSWORD
ADMIN_EMAIL=admin@wtrebol.com
